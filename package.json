    "react-dom": "19.2.3",
    "react-router-dom": "7.10.1",
    "sass": "1.96.0",
    "spy4js": "5.0.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.49.0",
    "vite": "7.2.7",
    "vitest": "4.0.15"
  },
