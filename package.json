  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "description": "Abstract form handling for any purpose (~2 kb gzipped)",
  "keywords": [
    "form",
    "react",
    "flow"
  ],
  "license": "MIT",
